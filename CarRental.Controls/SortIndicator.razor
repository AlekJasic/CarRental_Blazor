@using CarRental.Model 

@inject IVehicleFilters Filters

@if (Column == Filters.SortColumn)
{
    <span>@Indicator</span>
}
else
{
    <span>&nbsp;</span>
}
@code {
    /// <summary>
    /// Sets which <see cref="VehicleFilterColumns"/> this indicator is for.
    /// </summary>
    [Parameter]
    public VehicleFilterColumns Column { get; set; }

    /// <summary>
    /// Show the sort direction.
    /// </summary>
    public string Indicator => Filters.SortAscending ? "🔼" : "🔽";
}
